#!/bin/sh

# Format Rust code before committing
echo "Running rustfmt..."

# Find all staged .rs files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$')

if [ -z "$STAGED_FILES" ]; then
  echo "No Rust files to format."
  exit 0
fi

# Run rustfmt on them
for file in $STAGED_FILES; do
  if [ -f "$file" ]; then
    cargo fmt "$file"
    git add "$file"
  fi
done

echo "rustfmt completed."

# Run Rust tests using nextest before committing
echo "Running Rust tests with cargo nextest..."

if ! command -v cargo-nextest >/dev/null 2>&1; then
  echo "cargo-nextest not found. Please install it with:"
  echo "  cargo install cargo-nextest"
  exit 1
fi

cargo nextest run --no-fail-fast
status=$?

if [ $status -ne 0 ]; then
  echo "Tests failed. Commit aborted."
  exit $status
else
  echo "All tests passed."
fi

echo "Pre-commit checks passed. Proceeding with commit."
